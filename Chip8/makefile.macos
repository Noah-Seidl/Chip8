CC = clang

CFLAGS = -g -O0 -Wall -MMD -MP $(shell pkg-config --cflags sdl2)
LDFLAGS = $(shell pkg-config --libs sdl2)

PROGRAM = programmMac
OBJECTS = main.o SDLWindow.o dragdrop.o chip8Display.o emulator.o

default: $(PROGRAM)

$(PROGRAM): $(OBJECTS)
	$(CC) $(OBJECTS) -o $(PROGRAM) $(LDFLAGS)

clean:
	rm -f $(OBJECTS) $(OBJECTS:.o=.d) $(PROGRAM)

-include $(OBJECTS:.o=.d)